<div>
{{#if  isAuthenticated}}
    <!--Page Header-->
<div class="page-header">
    <div class="container">
        <h4 class="page-title">Hello {{user.name}}!</h4>

        <img src="{{user.photo}}" style="width: 50px;" alt="User Photo">

    </div>

</div>

<!--page content-->

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1">
                Current Sales: {{user.sales}}
            </div>
            <div class="col-md-1">
                Sales Goal: {{user.sales_goal}}
            </div>
            <div class="col-md-1">
                Performance: {{user.performance}}%
            </div>

        </div>

        <div class="row">
            <div class="col-md-4">
                <div id="piechart" style="width: 300px; height: 250px;"></div>
            </div>
        </div>
    </div>


</div>
{{else}}
    <!--Page Header-->
    <div class="page-header">
        <div class="container">
            <h4 class="page-title">Welcome to Sugar CRM!</h4>
        </div>
    </div>

    <!--page content-->

    <div class="page-content">
        <div class="container">
            <p>Description of the site.</p>
            <span><a href="/login">Log In Here</a></span>
        </div>
    </div>
{{/if}}
</div>


